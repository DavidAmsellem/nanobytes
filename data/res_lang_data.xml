<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Activar idiomas -->
        <record id="base.lang_es" model="res.lang">
            <field name="active" eval="True"/>
        </record>
        <record id="base.lang_en" model="res.lang">
            <field name="active" eval="True"/>
        </record>
        
        <!-- Configurar idiomas del sitio web -->
        <record id="website.default_website" model="website">
            <field name="language_ids" eval="[(6, 0, [
                ref('base.lang_es'),
                ref('base.lang_en')
            ])]"/>
            <field name="default_lang_id" ref="base.lang_es"/>
        </record>

        <!-- Instalar idiomas -->
        <function model="base.language.install" name="install_language">
            <value eval="['es_ES', 'en_US']"/>
        </function>
    </data>
</odoo>