<?xml version="1.0" encoding="utf-8"?>
<!--
/**
 * @file department_views.xml
 * @brief View definitions for Department model in University module
 *
 * This file contains the following views:
 * - Form View: Detailed department information with professors
 * - List View: Basic department listing
 * - Kanban View: Visual card-based view with dynamic coloring
 * - Search View: Filters and grouping options for departments
 *
 * Features:
 * - Dynamic styling based on university
 * - Professor management interface
 * - Image handling with avatar fallback
 * - Comprehensive grouping and filtering
 * 

-->
<odoo>
   
    <record id="view_department_form" model="ir.ui.view">   <!-- Forma de vista -->
        <field name="name">university.department.form</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <form string="Department" class="o_form_sheet_bg department-form">
              
                <sheet>  <!-- contenedor principal -->
         
                        <group string="Basic Information" col="2" class="department-basic-info">
                            <field name="name" class="department-name"/> <!-- no crear/abrir uni, solo leer -->
                            <field name="university_id" 
                                   options="{'no_create': True, 'no_open': True}"  
                                   force_save="1"
                                   readonly="context.get('id', False)"/>
                            <field name="head_id"/> 
                            <field name="professor_ids" widget="many2many_tags"/>  <!-- widget de many2many tags -->
                        </group>
                   
              
                    <notebook>
                     
                        <page string="Professors" class="department-professors-tab">
                         
                              <field name="professor_ids" widget="kanban" class="department-professor-kanban">
                                <kanban class="o_kanban_small_column o_kanban_horizontal"> <!-- clase predefinida -->
                                    <field name="name"/>
                                    <field name="university_id"/>
                                    <field name="department_id"/>
                                 
                                    
                                    <templates>  <!-- template para los kanban -->
                                        <t t-name="kanban-box">  <!-- para cada kanban box -->
                                            <div class="department-professor-card">
                                                <strong><field name="name"/></strong><br/>
                                                <span>University: <field name="university_id"/></span><br/>
                                                <span>Department: <field name="department_id"/></span><br/>
                                     
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View: List view for the 'university.department' model -->
    <record id="view_department_list" model="ir.ui.view">
        <field name="name">university.department.list</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
                <field name="university_id"/>
                <field name="head_id"/>
        
            </list>
        </field>
    </record>

  
    <record id="view_department_kanban" model="ir.ui.view">
        <field name="name">university.department.kanban</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="university_id">
                
                <field name="name"/>
                <field name="image_1920"/>
                <field name="university_id"/>
                <field name="professor_count"/> <!-- Add computed field -->
                <field name="head_id"/>
                <templates>
                    <t t-name="kanban-box">  <!-- para cada kanban box -->
                        <!-- fondo y lateral predefinido para cada una -->
                       <div t-attf-class="oe_kanban_card oe_kanban_global_click department-kanban-card department-bg-#{record.university_id.raw_value % 6} department-border-#{record.university_id.raw_value % 6}">
                            
                            <!-- Avatar/Image -->
                            <div class="department-kanban-image">
                                <t t-if="record.image_1920.raw_value">  <!-- si tenemos imagen la muestra -->
                                    <img t-att-src="kanban_image('university.department', 'image_1920', record.id.value)"
                                         class="img img-fluid rounded-circle"/>
                                </t>
                                <t t-else="">   <!-- Si no tenemos imagen, con background seleccionado -->
                                    <div t-attf-class="department-default-avatar department-bg-#{record.university_id.raw_value % 6}">
                                        <t t-esc="record.name.value[0]"/> <!-- primera letra si no hay imagen -->
                                    </div>
                                </t>
                            </div>
                            
                            <!-- Details -->
                            <div class="department-kanban-details">  <!-- detalles de la kanban -->
                                <strong class="department-name">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <small class="me-2">
                                        <i class="fa fa-users"/> 
                                        <field name="professor_count"/> professors
                                    </small>
                                </div>
                                <div class="text-muted">
                                    <small>
                                        <i class="fa fa-university"/> 
                                        <field name="university_id"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

  
    <record id="action_department" model="ir.actions.act_window">
        <field name="name">Departments</field>  <!-- nombre en el interfaz -->
        <field name="res_model">university.department</field> <!-- nombre de notificacion -->
        <field name="view_mode">kanban,list,form</field>  
        <field name="context">{'group_by': 'university_id'}</field> <!-- agrupar por universidad -->
    </record>

  

    <record id="view_department_search" model="ir.ui.view">
        <field name="name">university.department.search</field>
        <field name="model">university.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="university_id"/>  
                <!-- filtro predefinido -->
                <filter string="My University" name="my_university" 
                        domain="[('university_id', '=', context.get('default_university_id'))]"/>
                <!-- opciones de agrupado -->
                <group expand="0" string="Group by">
                    <filter string="University" name="group_university" 
                            context="{'group_by': 'university_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
