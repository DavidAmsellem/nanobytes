<?xml version="1.0" encoding="utf-8"?>
<!--
/**
 * @file enrollment_views.xml
 * @brief View definitions for Enrollment model in University module
 *
 * This file contains the following views:
 * - Form View: Detailed enrollment information with student and subject data
 * - List View: Basic enrollment listing
 * - Kanban View: Visual card-based view with grouping by university
 * - Action: Window action for enrollment views
 *
 * Features:
 * - Dynamic domain filters for subjects based on university
 * - Automatic professor assignment
 * - Grade tracking
 * - Comprehensive grouping options
 *
-->
<odoo>

    <!-- Form View -->
    <record id="view_enrollment_form" model="ir.ui.view">   <!-- vista de form -->
        <field name="name">university.enrollment.form</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment">  
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <!-- no crear estudiantes/solo con la universidad -->
                            <field name="student_id" 
                                   options="{'no_create': True}"
                                   domain="[('university_id', '!=', False)]"/>
                            <!-- solo lectura -->
                            <field name="university_id" readonly="1"/>
                            <!--  No crear/solo con universidad-->
                            <field name="subject_id" 
                                   options="{'no_create': True}"
                                   domain="[('university_id', '=', university_id)]"/>
                            <!-- solo lectura y forzar guardado-->
                            <field name="professor_id" readonly="1" force_save="1"/>
                        </group>
                        <group string="Grades">
                            <field name="grade_ids"/> <!-- campo One2many para notas -->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_enrollment_list" model="ir.ui.view">
        <field name="name">university.enrollment.list</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <list string="Enrollments">
                <field name="university_id"/>
                <field name="student_id"/>
                <field name="professor_id"/>
                <field name="subject_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_enrollment_kanban" model="ir.ui.view">
        <field name="name">university.enrollment.kanban</field>
        <field name="model">university.enrollment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="university_id" class="o_kanban_small_column">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="professor_id"/>
                <field name="university_id"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="d-flex p-2">
                                <div class="flex-grow-1">
                                    <strong class="d-block">
                                        <field name="student_id"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="subject_id"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-user"/> <field name="professor_id"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">university.enrollment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_enrollment_kanban"/>
        <field name="context">{'group_by': 'university_id'}</field>
    </record>

</odoo>
