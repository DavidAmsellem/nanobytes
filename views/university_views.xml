<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * @file university_views.xml
 * @brief View definitions for University module
 *
 * This file contains all view definitions related to universities:
 * - Form View: Detailed university information with statistics and related data
 * - List View: Basic university listing with essential information
 * - Kanban View: Card-based view with dynamic coloring and image handling
 *
 * Features:
 * - Statistical buttons for professors, students, departments and enrollments
 * - Image handling with avatar fallback
 * - Related data organized in tabs
 * - Dynamic styling in kanban view
 *
 * @version 1.0
 * @date 2025-04-25
 */
-->
<odoo>
    <!-- Form View -->
    <record id="view_university_form" model="ir.ui.view">  <!-- modelo de vista -->
        <field name="name">university.university.form</field>  <!-- nombre -->
        <field name="model">university.university</field> <!-- pertenecemos -->
        <field name="arch" type="xml">
            <form string="University" class="o_form_sheet_bg">
                <sheet class="o_form_sheet university-form">
                    <!-- Header with buttons -->
                    <div class="oe_button_box" name="button_box">  <!-- botones estadisticos -->
                        <!-- Professors Button -->
                        <button name="action_view_professors"
                                type="object"
                                class="oe_stat_button university-stat-button"  
                                icon="fa-users"
                                invisible="professor_count == 0">
                            <div class="o_stat_info text-center"> <!-- estadistico predefinido -->
                                <span class="o_stat_value">
                                    <field name="professor_count" widget="statinfo"/>
                                </span>
                            </div>
                        </button>
                                                                <!-- class="oe_stat_button" clase tipo de boton -->
                        <!-- Students Button -->
                        <button name="action_view_students"
                                type="object"
                                class="oe_stat_button university-stat-button"
                                icon="fa-graduation-cap"
                                invisible="student_count == 0">
                            <div class="o_stat_info text-center">
                                <span class="o_stat_value">
                                    <field name="student_count" widget="statinfo"/>  <!-- widget estadistico -->
                                </span>
                            </div>
                        </button>

                        <!-- Departments Button -->
                        <button name="action_view_departments"
                                type="object"
                                class="oe_stat_button university-stat-button"
                                icon="fa-building"
                                invisible="department_count == 0">
                            <div class="o_stat_info text-center">
                                <span class="o_stat_value">
                                    <field name="department_count" widget="statinfo"/>
                                </span>
                            </div>
                        </button>

                        <!-- Enrollments Button -->
                        <button name="action_view_enrollments"
                                type="object"
                                class="oe_stat_button university-stat-button"
                                icon="fa-file-text"
                                invisible="enrollment_count == 0">
                            <div class="o_stat_info text-center">
                                <span class="o_stat_value">
                                    <field name="enrollment_count" widget="statinfo"/>
                                </span>
                            </div>
                        </button>
                    </div>

                    <div class="text-center mb-4">
                        <h2 class="university-section-title">University Information</h2>
                    </div>



                    <div class="row">
                        <!-- Columna 1: Basic Information -->
                        <div class="col-md-4">
                            <group string="Basic Information" col="2">
                                <field name="name" class="university-name"/>
                                <field name="director_id"/>
                            </group>
                        </div>

                        <!-- Columna 2: Address -->
                        <div class="col-md-4">
                            <group string="Address" col="2" class="university-address">
                                <field name="street"/>
                                <field name="city"/>
                                <field name="zip"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                            </group>
                        </div>

                        <!-- Columna 3: Logo -->
                        <div class="col-md-4">
                            <group string="University Logo">
                                <field name="image_1920" widget="image" class="oe_avatar university-avatar"
                                       options="{
                                           'size': [300, 300],
                                           'preview_image': 'image_1920',
                                           'zoom': false
                                       }"/>
                            </group>
                        </div>
                    </div>

                    <!-- Tabs en la parte inferior-->
                    <notebook>
                        <!-- Departments Tab -->
                        <page string="Departments" class="university-tab">
                            <field name="department_ids" widget="kanban" class="university-kanban-field">
                                <kanban class="o_kanban_small_column o_kanban_horizontal">  <!-- estilo predefinido kanban -->
                                    <field name="name"/>
                                    <field name="university_id"/>
                                    <field name="head_id"/>
                                    <templates>
                                        <t t-name="kanban-box">   <!-- estilo predefinido kanban box -->
                                            <div class="oe_kanban_card university-card">
                                                <strong class="university-card-title"><field name="name"/></strong><br/>
                                                <span class="university-card-text">University: <field name="university_id"/></span><br/>
                                                <span class="university-card-text">Department Head: <field name="head_id"/></span>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Professors Tab -->
                        <page string="Professors" class="university-tab">
                            <field name="professor_ids" widget="kanban" class="university-kanban-field">
                                <kanban class="o_kanban_small_column o_kanban_horizontal"> <!--  estilo predefinido kanban  -->
                                    <field name="name"/>
                                    <field name="university_id"/>
                                    <field name="department_id"/>
                                    <field name="enrollment_ids"/>
                                    <field name="is_department_head" invisible="1"/>
                                    <templates>
                                        <t t-name="kanban-box">   <!-- estilo predefinido kanban box -->
                                            <div class="oe_kanban_card university-card">  <!-- estilo predefinifo para la kanban card -->
                                                <div class="d-flex justify-content-between">
                                                    <strong class="university-card-title"><field name="name"/></strong>
                                                    <span t-if="record.is_department_head.raw_value" 
                                                          class="badge badge-success department-head-badge">
                                                        Department Head
                                                    </span>
                                                </div>
                                                <span class="university-card-text">University: <field name="university_id"/></span><br/>
                                                <span class="university-card-text">Department: <field name="department_id"/></span><br/>
                                                <span class="university-card-text">Enrollments: <field name="enrollment_ids"/></span>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Enrollments Tab -->
                        <page string="Enrollments" class="university-tab">
                            <field name="enrollment_ids" widget="kanban" class="university-kanban-field">
                                <kanban class="o_kanban_small_column o_kanban_horizontal">  <!-- estilo predefinido -->
                                    <field name="student_id"/>
                                    <field name="university_id"/>
                                    <field name="subject_id"/>
                                    <field name="professor_id"/>
                                    <templates>
                                        <t t-name="kanban-box">   <!-- estilo predefinido -->
                                            <div class="oe_kanban_card university-card">  <!-- estilo predefinido -->
                                                <strong class="university-card-title"><field name="student_id"/></strong><br/>
                                                <span class="university-card-text">University: <field name="university_id"/></span><br/>
                                                <span class="university-card-text">Subject: <field name="subject_id"/></span><br/>
                                                <span class="university-card-text">Professor: <field name="professor_id"/></span>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Students Tab -->
                        <page string="Students" class="university-tab">
                            <field name="student_ids" widget="kanban" class="university-kanban-field">
                                <kanban class="o_kanban_small_column o_kanban_horizontal">   <!-- estilo predefinido -->
                                    <field name="name"/>
                                    <field name="university_id"/>
                                    <field name="email_student"/>
                                    <field name="city"/>
                                    <templates>
                                        <t t-name="kanban-box">  <!-- estilo predefinido -->
                                            <div class="oe_kanban_card university-card">
                                                <strong class="university-card-title"><field name="name"/></strong><br/>
                                                <span class="university-card-text">University: <field name="university_id"/></span><br/>
                                                <span class="university-card-text">Email: <field name="email_student"/></span><br/>
                                                <span class="university-card-text">City: <field name="city"/></span>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_university_list" model="ir.ui.view">   <!-- modelo vista  -->
        <field name="name">university.university.list</field>
        <field name="model">university.university</field>
        <field name="arch" type="xml">
            <list string="Universities" class="university-list">
                <field name="name" class="university-list-name"/>
                <field name="city" class="university-list-city"/>
                <field name="country_id" class="university-list-country"/>
                <field name="director_id" class="university-list-director"/>
                <field name="student_count" class="university-list-count"/>
                <field name="professor_count" class="university-list-count"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_university_kanban" model="ir.ui.view">   <!-- modelo de vista -->
        <field name="name">university.university.kanban</field>
        <field name="model">university.university</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">   <!-- modelo predefinido -->
                <field name="name"/>
                <field name="image_1920"/>
                <field name="city"/>
                <field name="street"/>
                <field name="country_id"/>
                <field name="director_id"/>
                <!-- plantilla para la vista -->
                <templates>
                    <t t-name="kanban-box">  <!-- para cada tarjeta -->
                        <div class="oe_kanban_card oe_kanban_global_click university-kanban-global"
                             t-attf-style="border-right: 8px solid #{record.id.raw_value % 6 == 0 ? '#ff9eaa' :
                                                                    record.id.raw_value % 6 == 1 ? '#92d3c7' :
                                                                    record.id.raw_value % 6 == 2 ? '#ffd699' :
                                                                    record.id.raw_value % 6 == 3 ? '#b39ddb' :
                                                                    record.id.raw_value % 6 == 4 ? '#90caf9' :
                                                                    '#aed581'}"> <!-- Condicional para color tarjeta -->
                            <div class="d-flex p-3">
                                <!-- Image/Avatar -->
                                <div class="me-3">
                                    <t t-if="record.image_1920.raw_value">  <!-- si hay foto la muestra -->
                                        <img t-att-src="kanban_image('university.university', 'image_1920', record.id.value)"
                                             class="rounded university-kanban-image"/>
                                    </t>
                                    <t t-else="">   <!-- si no hay foto avatar -->
                                        <div class="university-default-avatar">
                                            <t t-esc="record.name.value[0].toUpperCase()"/>  
                                        </div>
                                    </t>
                                </div>
                                
                                <!-- Details -->
                                <div class="flex-grow-1">
                                    <strong class="d-block mb-1 university-card-title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <i class="fa fa-map-marker me-1"/> 
                                        <field name="city"/> - <field name="country_id"/>
                                    </div>
                                    <div class="text-muted mt-1">
                                        <i class="fa fa-road me-1"/> 
                                        <field name="street"/>
                                    </div>
                                    <div class="text-muted mt-1">
                                        <i class="fa fa-user me-1"/> Director: 
                                        <field name="director_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_university" model="ir.actions.act_window">
        <field name="name">Universities</field>   <!-- nombre de la interfaz -->
        <field name="res_model">university.university</field>   
        <field name="view_mode">kanban,list,form</field>  <!-- vistas disponibles -->
        <field name="view_id" ref="view_university_kanban"/>  <!-- vista por defecto -->
    </record>  

</odoo>
