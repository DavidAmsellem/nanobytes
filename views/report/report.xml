<?xml version="1.0" encoding="utf-8"?>
<!--
/**
 * @file report.xml
 * @brief Report configuration for Student academic records
 *
 * This file defines the PDF report generation settings including:
 * - Report name and model association
 * - Output format configuration
 * - File naming conventions
 * - Template associations
 *
 * Features:
 * - QWeb-PDF report type
 * - Dynamic filename generation
 * - Model-specific configuration
 * - Template binding
 *

-->
<odoo>
    <record id="student_report" model="ir.actions.report">
        <!-- Report name to be displayed in the user interface -->
        <field name="name">Student Report</field>
        
        <!-- Odoo model associated with this report -->
        <field name="model">university.student</field>
        
        <!-- Report type specification - QWeb PDF format -->
        <field name="report_type">qweb-pdf</field>
        
        <!-- Report template name reference -->
        <field name="report_name">Universidad.report_student</field>
        
        <!-- Report file path definition -->
        <field name="report_file">Universidad.report_student</field>
        
        <!-- Dynamic PDF filename generation -->
        <field name="print_report_name">'University Grades - %s' % (object.name or 'Attendee').replace('/','')</field>
    </record>
</odoo>
