<?xml version="1.0" encoding="utf-8"?>
<!--
/**
 * @file grade_views.xml
 * @brief View definitions for Grade model in University module
 *
 * This file contains the following views:
 * - Form View: Detailed grade information with student and enrollment data
 * - List View: Basic grade listing
 * - Kanban View: Visual card-based view with dynamic coloring based on grade values
 * - Search View: Filters and grouping options for grades
 *
 * Features:
 * - Dynamic domain filters for enrollments based on selected student
 * - Color coding for passing/failing grades
 * - Grouping by university, student and date
 * - Comprehensive search filters
 *
 */
-->
<odoo>
   

                                                            <!-- Form View: Vista de formulario -->
    <record id="view_grade_form" model="ir.ui.view">
        <field name="name">university.grade.form</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
         <form>
                <sheet> <!-- main -->
                     <group>
                        <field name="student_id" 
                               options="{'no_create': True}"/>
                        <field name="enrollment_id" 
                               options="{'no_create': True}"
                               domain="[('student_id', '=', student_id)]"/> <!-- se filtra por estudiante -->
                        <field name="subject_id"/>  
                        <field name="grade"/>
                        <field name="date"/>
                   
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_grade_list" model="ir.ui.view">
        <field name="name">university.grade.list</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <list string="Grades">
                <field name="university_id"/>     <!-- Añadimos universidad -->
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="enrollment_id"/>
                <field name="grade" avg="avg"/>     <!-- Habilitamos la agregación -->
                <field name="date"/>
            </list>
        </field>
    </record>

  
    <record id="view_grade_kanban" model="ir.ui.view">
    
        <field name="name">university.grade.kanban</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
     
            <kanban class="o_kanban_small_column" default_group_by="university_id">
           
                <field name="student_id"/>
                <field name="enrollment_id"/>
                <field name="grade"/>
                <field name="date"/>
                <field name="university_id"/>
                <templates>
                    <!-- Inicia la definición de la plantilla para las tarjetas kanban -->
                    <t t-name="kanban-box">
                                 <!-- Contenedor de cada tarjeta de kanban con estilo condicional basado en la calificación -->
                        <div class="oe_kanban_card" 
                             t-attf-style="border-left: 5px solid #{record.grade.raw_value >= 5.0 ? '#28a745' : '#dc3545'}">
                             <div class="d-flex p-2">
                                <div class="flex-grow-1">
                                <strong class="d-block mb-1">
                                    <field name="student_id"/>
                                </strong>
                                    <div class="text-muted">
                                        <i class="fa fa-graduation-cap me-1"/> Enrollment: 
                                        <field name="enrollment_id"/>
                                    </div>
                                    <div class="mt-2">
                                        <span t-attf-class="badge #{record.grade.raw_value >= 5.0 ? 'text-bg-success' : 'text-bg-danger'}">
                                            Grade: <field name="grade"/>
                                        </span>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fa fa-calendar me-1"/>
                                        <field name="date"/>
                                    </small>
                                    
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View: Vista de búsqueda para el modelo 'university.grade' -->
    <record id="view_grade_search" model="ir.ui.view">
        <field name="name">university.grade.search</field>
        <field name="model">university.grade</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id"/>
                <field name="enrollment_id"/>
                <field name="university_id"/>
                <separator/>
                <!-- filtros -->
                <filter name="passing_grades" string="Passing" domain="[('grade', '>=', 5.0)]"/>
                <filter name="failing_grades" string="Failing" domain="[('grade', '&lt;', 5.0)]"/>
                <!-- agrupados -->
                <group expand="0" string="Group By">
                    <filter name="group_university" string="University" 
                            context="{'group_by': 'university_id'}"/>
                    <filter name="group_student" string="Student" 
                            context="{'group_by': 'student_id'}"/>
                    <filter name="group_date" string="Date" 
                            context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Acción para mostrar las vistas de calificaciones -->
    <record id="action_grade" model="ir.actions.act_window">
        <field name="name">Grades</field>
        <field name="res_model">university.grade</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'group_by': 'university_id'}</field>  <!-- Agrupación por defecto -->
    </record>

 
</odoo>
