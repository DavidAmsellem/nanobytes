<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Regla para que los administradores vean todos los estudiantes -->
    <record id="rule_manager_students" model="ir.rule">
        <field name="name">Manager: See All Students</field>
        <field name="model_id" ref="model_university_student"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('Universidad.group_university_manager'))]"/>
    </record>
</odoo>